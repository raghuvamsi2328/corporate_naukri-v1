// Variables
$bg-cream: #f6f4e8;
$navy-dark: #0a192f;
$white: #ffffff;
$text-muted: #555;
$border-radius: 12px;

// Global Styles
* {
    margin: 0;
    padding: 0;
    box-sizing: border-box;
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
}

body {
    background-color: $bg-cream;
    color: $navy-dark;
}

// Header Animation
@keyframes navbarSlideIn {
  from { opacity: 0; transform: translateY(-40px) scale(0.98); }
  to { opacity: 1; transform: translateY(0) scale(1); }
}

.navbar {
  animation: navbarSlideIn 0.7s cubic-bezier(.4,2,.6,1);
}

// Logo Animation
@keyframes logoFloat {
  0%, 100% { transform: translateY(0) rotate(0deg); }
  25% { transform: translateY(-3px) rotate(-1deg); }
  50% { transform: translateY(0) rotate(0deg); }
  75% { transform: translateY(-3px) rotate(1deg); }
}

.logo {
  animation: logoFloat 4s ease-in-out infinite;
  
  .logo-img {
    animation: logoFloat 3s ease-in-out infinite;
  }
}

// Dynamic Button Animation
.login-btn, .profile-btn {
  position: relative;
  overflow: hidden;
  z-index: 1;
}
.login-btn::before, .profile-btn::before {
  content: '';
  position: absolute;
  left: -60%;
  top: 0;
  width: 120%;
  height: 100%;
  background: linear-gradient(90deg, #0a192f 0%, #233554 100%);
  opacity: 0.12;
  transform: skewX(-18deg);
  transition: left 0.4s cubic-bezier(.4,2,.6,1);
  z-index: 0;
}
.login-btn:hover::before, .profile-btn:hover::before {
  left: 0;
}
.login-btn span, .profile-btn span {
  position: relative;
  z-index: 2;
  transition: color 0.2s;
}
.login-btn {
  animation: pulseBtn 1.2s infinite alternate cubic-bezier(.4,2,.6,1);
}
@keyframes pulseBtn {
  from { box-shadow: 0 0 0 0 rgba(10,25,47,0.10); }
  to { box-shadow: 0 0 0 8px rgba(10,25,47,0.04); }
}

// Dynamic Button Text Animation
.login-btn {
  transition: background 0.3s, color 0.3s, box-shadow 0.2s, transform 0.18s;
}
.login-btn[data-state="signup"] {
  background: linear-gradient(90deg, #1976d2 60%, #64b5f6 100%);
  color: #fff;
}
.login-btn[data-state="login"] {
  background: linear-gradient(90deg, #0a192f 60%, #233554 100%);
  color: #fff;
}
.login-btn[data-state="loading"] {
  background: #fff3;
  color: #1976d2;
  cursor: wait;
}

// Navbar
.navbar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 16px 4vw 12px 4vw;
    background-color: $bg-cream;
    box-shadow: 0 2px 16px rgba(10, 25, 47, 0.04);
    position: sticky;
    top: 0;
    z-index: 10;
    transition: box-shadow 0.3s;

    .hamburger-menu {
        display: none;
        flex-direction: column;
        justify-content: space-between;
        width: 28px;
        height: 22px;
        background: transparent;
        border: none;
        cursor: pointer;
        padding: 0;
        z-index: 12;

        span {
            display: block;
            width: 100%;
            height: 3px;
            background-color: $navy-dark;
            border-radius: 2px;
            transition: all 0.3s ease;
        }

        &.open {
            span:nth-child(1) {
                transform: rotate(45deg) translate(7px, 7px);
            }

            span:nth-child(2) {
                opacity: 0;
            }

            span:nth-child(3) {
                transform: rotate(-45deg) translate(7px, -7px);
            }
        }
    }

    .logo {
        display: flex;
        align-items: center;
        gap: 0.7rem;
        cursor: pointer;
        user-select: none;

        .logo-img {
            height: 2.2rem;
            width: 2.2rem;
            margin-right: 0.2rem;
            display: block;
        }

        .logo-text {
            font-weight: 800;
            font-size: 1.25rem;
            letter-spacing: 1.5px;
            color: $navy-dark;
            text-shadow: 0 1px 0 #fff, 0 2px 8px rgba(10, 25, 47, 0.07);
        }
    }

    nav ul {
        display: flex;
        list-style: none;
        align-items: center;
        gap: 22px;
        margin: 0;

        li {
            position: relative;

            a,
            .login-btn,
            .profile-btn {
                text-decoration: none;
                color: $navy-dark;
                font-size: 1rem;
                font-weight: 500;
                background: none;
                border: none;
                padding: 8px 18px;
                border-radius: 22px;
                transition: background 0.18s, color 0.18s, box-shadow 0.18s;
                cursor: pointer;
                outline: none;
                display: flex;
                align-items: center;

                &.active,
                &:hover {
                    background: $navy-dark;
                    color: $white;
                    box-shadow: 0 2px 8px rgba(10, 25, 47, 0.08);
                }
            }

            .theme-toggle {
                background: none;
                border: 2px solid $navy-dark;
                color: $navy-dark;
                font-size: 1.2rem;
                font-weight: 500;
                padding: 6px 12px;
                border-radius: 50%;
                cursor: pointer;
                outline: none;
                display: flex;
                align-items: center;
                justify-content: center;
                transition: all 0.3s ease;
                width: 40px;
                height: 40px;

                .theme-icon {
                    display: flex;
                    align-items: center;
                    justify-content: center;
                    transition: transform 0.3s ease;
                }

                &:hover {
                    background: $navy-dark;
                    transform: rotate(20deg) scale(1.1);
                    box-shadow: 0 4px 12px rgba(10, 25, 47, 0.15);

                    .theme-icon {
                        transform: rotate(-20deg);
                    }
                }
            }
        }
    }

    .login-btn {
        font-weight: 700;
        background: linear-gradient(90deg, $navy-dark 60%, #233554 100%);
        color: $white;
        box-shadow: 0 2px 8px rgba(10, 25, 47, 0.08);
        border: none;
        padding: 8px 26px;
        margin-left: 10px;
        transition: background 0.2s, box-shadow 0.2s, transform 0.18s;

        &:active {
            transform: scale(0.97);
        }
    }

    .profile-btn {
        display: flex;
        align-items: center;
        gap: 0.5rem;
        background: #f6f4e8;
        color: $navy-dark;
        border: 1.5px solid #e3eaf3;
        font-weight: 600;
        padding: 7px 18px 7px 10px;
        border-radius: 22px;
        position: relative;
        transition: background 0.18s, color 0.18s, box-shadow 0.18s;

        &:hover {
            background: $navy-dark;
            color: $white;
        }

        .profile-icon {
            height: 1.5rem;
            width: 1.5rem;
            border-radius: 50%;
            margin-right: 0.2rem;
            background: #fff;
            box-shadow: 0 1px 4px rgba(10, 25, 47, 0.07);
        }

        .profile-arrow {
            margin-left: 0.2rem;
            font-size: 1rem;
            transition: transform 0.2s;

            &.open {
                transform: rotate(180deg);
            }
        }
    }

    .profile-menu {
        position: absolute;
        right: 0;
        top: 120%;
        background: $white;
        border-radius: 12px;
        box-shadow: 0 8px 32px rgba(10, 25, 47, 0.13);
        min-width: 160px;
        padding: 0.5rem 0;
        z-index: 100;
        animation: fadeInMenu 0.22s cubic-bezier(.4, 2, .6, 1);
        transform-origin: top right;

        li {
            padding: 10px 22px;
            color: $navy-dark;
            font-size: 1rem;
            cursor: pointer;
            transition: background 0.15s, color 0.15s;

            &:hover {
                background: #f6f4e8;
                color: $navy-dark;
            }
        }
    }

    .mobile-overlay {
        display: none;
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100vh;
        background: rgba(0, 0, 0, 0.5);
        z-index: 10;
        animation: fadeIn 0.3s ease;
    }

